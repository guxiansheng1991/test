/* shareComponents/body/body.wxss */
.body {
  width: 100%;
  height: auto;
  border: 1rpx solid #000000;
  padding: 10rpx;
  box-sizing: border-box;
}
.list .item {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #cccccc;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list .item .left {
  width: 10%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list .item .right {
  width: 90%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list .item .right .input {
  width: 100%;
  height: 100%;
}
.list .item .right .text {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list .item .right .finish {
  color: #cccccc;
  font-size: 24rpx;
  text-decoration: line-through;
}